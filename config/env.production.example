# --- 生产环境配置模版 ---
# 复制此文件为 .env.prod 并根据实际情况填写

# 域名配置 (用于 Caddy 自动申请证书)
DOMAIN=your-comic-domain.com
ADMIN_EMAIL=your-email@example.com

# 数据库配置 (需与 docker-compose 中的 db 服务保持一致)
DB_USER=postgres
DB_PASSWORD=your_strong_password
DB_NAME=comic_db

# NextAuth 配置
NEXTAUTH_URL=https://your-comic-domain.com
NEXTAUTH_SECRET=run_openssl_rand_base64_32_to_generate

# AI 服务 API Keys
DASHSCOPE_API_KEY=your_key
QINIU_API_KEY=your_key

# 存储配置
STORAGE_TYPE=oss
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=your_id
OSS_ACCESS_KEY_SECRET=your_secret
OSS_BUCKET=your_bucket

# 安全 Token
API_SECURITY_TOKEN=your_token
ENABLE_API_KEY_VERIFICATION=true
